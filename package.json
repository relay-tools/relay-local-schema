{
  "name": "relay-local-schema",
  "version": "0.7.0",
  "description": "Use Relay without a GraphQL server",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "scripts": {
    "build": "rimraf lib && babel src -d lib",
    "build-fixtures": "npm run update-schema && npm run relay-compiler",
    "lint": "eslint src test *.js",
    "prepublish": "npm run build",
    "relay-compiler": "relay-compiler --src test/modern --schema test/fixtures/schema.graphql",
    "tdd": "jest --watch",
    "test": "npm run build-fixtures && npm run lint && npm run testonly -- --coverage",
    "testonly": "jest --runInBand --verbose",
    "update-schema": "babel-node test/fixtures/updateSchema.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/relay-tools/relay-local-schema.git"
  },
  "keywords": [
    "relay",
    "graphql",
    "react"
  ],
  "author": "Jimmy Jia",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/relay-tools/relay-local-schema/issues"
  },
  "homepage": "https://github.com/relay-tools/relay-local-schema#readme",
  "peerDependencies": {
    "graphql": ">=0.5.0",
    "react-relay": ">=1.0.0",
    "relay-runtime": ">=1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-relay": "^1.5.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "codecov": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-4catalyzer-react": "^0.4.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "graphql": "^14.1.1",
    "graphql-relay": "^0.5.4",
    "husky": "^0.14.3",
    "jest": "^24.5.0",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-relay": "^1.5.0",
    "relay-compiler": "^1.5.0",
    "relay-runtime": "^1.5.0",
    "rimraf": "^2.6.2"
  }
}
