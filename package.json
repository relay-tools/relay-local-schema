{
  "name": "relay-local-schema",
  "version": "0.8.0",
  "description": "Use Relay without a GraphQL server",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src -d lib --delete-dir-on-start",
    "build-fixtures": "npm run update-schema && npm run relay-compiler",
    "lint": "eslint src test",
    "prepublish": "npm run build",
    "relay-compiler": "relay-compiler --watchman false --src test --schema test/fixtures/schema.graphql",
    "tdd": "jest --watch",
    "test": "npm run build-fixtures && npm run lint && npm run testonly -- --coverage",
    "testonly": "jest --runInBand --verbose",
    "update-schema": "babel-node test/fixtures/updateSchema.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/relay-tools/relay-local-schema.git"
  },
  "keywords": [
    "relay",
    "graphql",
    "react"
  ],
  "author": "Jimmy Jia",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/relay-tools/relay-local-schema/issues"
  },
  "homepage": "https://github.com/relay-tools/relay-local-schema#readme",
  "peerDependencies": {
    "graphql": ">=0.5.0",
    "relay-runtime": ">=1.0.0"
  },
  "devDependencies": {
    "@4c/babel-preset": "^5.1.0",
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-relay": "^4.0.0",
    "codecov": "^3.3.0",
    "eslint": "^5.16.0",
    "eslint-config-4catalyzer": "^0.8.1",
    "eslint-config-4catalyzer-jest": "^1.2.1",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-prettier": "^3.0.1",
    "graphql": "^14.2.1",
    "graphql-relay": "^0.6.0",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "relay-compiler": "^4.0.0",
    "relay-runtime": "^4.0.0"
  }
}
